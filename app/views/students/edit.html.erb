<div class="container">
<%= form_for @student do |f| %>  
    <%= f.label :firstname %>  
    <%= f.text_field :firstname, value: @student.firstname,:class => "form-control" %>
    <%= f.label :lastname %>  
    <%= f.text_field :lastname, value: @student.lastname,:class => "form-control" %> 
    <%= f.label :age %>  
    <%= f.number_field :age , min: '1', max: '149', value: @student.age,:class => "form-control" %>  
    <%= f.label :education %>  
    <%= f.select(:education, ["Highschool","College","Masters","PHD"], {value: @student.education},{:class=>"browser-default form-control"})%> 
    <%= f.label :cohort_id %>  
    <%= f.select(:cohort_id, Cohort.all.collect {|cohort| ["#{cohort.id}" + " " + cohort.name]}, {value: @student.cohort_id }, {:class=>"browser-default form-control"}) %> 
    <%= f.submit :class => "btn btn-primary" %>
<% end %>

<p><a href="/students"> Cancel </a></p>
</div>