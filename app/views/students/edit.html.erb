<%= form_for @student do |f| %>  
    <%= f.label :firstname %>  
    <%= f.text_field :firstname, value: @student.firstname %>
    <%= f.label :lastname %>  
    <%= f.text_field :lastname, value: @student.lastname %> 
    <%= f.label :age %>  
    <%= f.number_field :age, value: @student.age %>  
    <%= f.label :education %>  
    <%= f.select(:education, ["Highschool","College","Masters","PHD"], {value: @student.education},{:class=>"browser-default"})%> 
    <%= f.label :cohort_id %>  
    <%= f.select(:cohort_id, Cohort.all.collect {|cohort| ["#{cohort.id}" + " " + cohort.name]}, {value: @student.cohort_id}, {:class=>"browser-default"}) %> 
    <%= f.submit %>
<% end %>

<%= link_to 'Delete', student_path(@student), method: :delete %> 